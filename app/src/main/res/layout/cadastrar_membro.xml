<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Membro:"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nomeMembro"
        android:id="@+id/edtNomeMembro"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sobrenomeMmebro"
        android:id="@+id/edtsobrenomeMembro"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnTipoMembro"
        android:layout_marginTop="20dp"
        android:layout_weight="0.25">
    </Spinner>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnStatusMembro"
        android:layout_marginTop="50dp"
        android:layout_weight="0.30">
    </Spinner>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALVAR"
            android:layout_weight="1"
            android:id="@+id/btnSalvarCad"
            android:layout_gravity="bottom"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="CANCELAR"
            android:layout_weight="1"
            android:id="@+id/btnCancelarCad"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</LinearLayout>